<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>FubuCore.Testing</AssemblyName>
    <TargetFrameworks>net462;netcoreapp3.0</TargetFrameworks>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
    <PackageReference Include="structuremap" Version="4.7.1" />
    <PackageReference Include="NSubstitute" Version="4.2.1" />
  </ItemGroup>
    
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data" />
    <Reference Include="System.Web" />
    <Reference Include="System.Web.Abstractions" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\FubuCore\FubuCore.csproj" />
    <ProjectReference Include="..\FubuTestingSupport\FubuTestingSupport.csproj" />
  </ItemGroup>
    
  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.0' ">
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net462' ">
    <PackageReference Include="NUnit" Version="2.7.1" />
    <PackageReference Include="NUnit.Mocks" Version="2.6.4" />
    <PackageReference Include="structuremap.automocking" Version="4.0.0.315" />
    <PackageReference Include="RhinoMocks" Version="3.6.1" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="Configuration/*.config" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
    
</Project>